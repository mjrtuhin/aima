{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "description": "AIMA Platform - Full observability dashboard covering API health, ML model performance, business KPIs, and worker health.",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100,
      "title": "API Health",
      "type": "row"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 0.95 },
              { "color": "green", "value": 0.99 }
            ]
          },
          "unit": "percentunit"
        }
      },
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 1 },
      "id": 1,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "auto", "textMode": "auto", "colorMode": "background" },
      "targets": [
        {
          "datasource": "${DS_PROMETHEUS}",
          "expr": "sum(rate(http_requests_total{job=\"aima-api\", status!~\"5..\"}[5m])) / sum(rate(http_requests_total{job=\"aima-api\"}[5m]))",
          "legendFormat": "Success Rate"
        }
      ],
      "title": "API Success Rate",
      "type": "stat"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.5 },
              { "color": "red", "value": 1.0 }
            ]
          },
          "unit": "s"
        }
      },
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 1 },
      "id": 2,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background" },
      "targets": [
        {
          "datasource": "${DS_PROMETHEUS}",
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"aima-api\"}[5m])) by (le))",
          "legendFormat": "p95 Latency"
        }
      ],
      "title": "API p95 Latency",
      "type": "stat"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": { "unit": "reqps" }
      },
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 1 },
      "id": 3,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "value" },
      "targets": [
        {
          "datasource": "${DS_PROMETHEUS}",
          "expr": "sum(rate(http_requests_total{job=\"aima-api\"}[1m]))",
          "legendFormat": "RPS"
        }
      ],
      "title": "Request Rate",
      "type": "stat"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": { "unit": "short" }
      },
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 1 },
      "id": 4,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "value" },
      "targets": [
        {
          "datasource": "${DS_PROMETHEUS}",
          "expr": "sum(celery_tasks_active{job=\"celery-worker\"})",
          "legendFormat": "Active Tasks"
        }
      ],
      "title": "Active Celery Tasks",
      "type": "stat"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 10 },
          "unit": "s"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 5 },
      "id": 10,
      "options": { "legend": { "calcs": ["mean", "max"], "displayMode": "table" }, "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "datasource": "${DS_PROMETHEUS}",
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=\"aima-api\"}[5m])) by (le, handler))",
          "legendFormat": "p50 - {{handler}}"
        },
        {
          "datasource": "${DS_PROMETHEUS}",
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"aima-api\"}[5m])) by (le, handler))",
          "legendFormat": "p95 - {{handler}}"
        }
      ],
      "title": "Request Latency by Endpoint",
      "type": "timeseries"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 10 },
          "unit": "reqps"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 5 },
      "id": 11,
      "targets": [
        {
          "datasource": "${DS_PROMETHEUS}",
          "expr": "sum by (status) (rate(http_requests_total{job=\"aima-api\"}[5m]))",
          "legendFormat": "HTTP {{status}}"
        }
      ],
      "title": "Request Rate by Status",
      "type": "timeseries"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 13 },
      "id": 101,
      "title": "ML Model Performance",
      "type": "row"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": { "unit": "s", "color": { "mode": "thresholds" }, "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 0.1 }, { "color": "red", "value": 0.5 }] } }
      },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 14 },
      "id": 20,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background" },
      "targets": [
        {
          "datasource": "${DS_PROMETHEUS}",
          "expr": "histogram_quantile(0.95, sum(rate(aima_inference_duration_seconds_bucket{module=\"customer_intelligence\"}[5m])) by (le))",
          "legendFormat": "Customer Intel p95"
        }
      ],
      "title": "Customer Intelligence Inference p95",
      "type": "stat"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": { "unit": "s", "color": { "mode": "thresholds" }, "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 0.2 }, { "color": "red", "value": 1.0 }] } }
      },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 14 },
      "id": 21,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background" },
      "targets": [
        {
          "datasource": "${DS_PROMETHEUS}",
          "expr": "histogram_quantile(0.95, sum(rate(aima_inference_duration_seconds_bucket{module=\"campaign_predictor\"}[5m])) by (le))",
          "legendFormat": "Campaign Predictor p95"
        }
      ],
      "title": "Campaign Predictor Inference p95",
      "type": "stat"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": { "unit": "short" }
      },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 14 },
      "id": 22,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "value" },
      "targets": [
        {
          "datasource": "${DS_PROMETHEUS}",
          "expr": "aima_customers_segmented_total",
          "legendFormat": "Total Customers Segmented"
        }
      ],
      "title": "Customers Segmented",
      "type": "stat"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": { "unit": "short" }
      },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 14 },
      "id": 23,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "value" },
      "targets": [
        {
          "datasource": "${DS_PROMETHEUS}",
          "expr": "aima_churn_predictions_total",
          "legendFormat": "Churn Predictions Run"
        }
      ],
      "title": "Churn Predictions",
      "type": "stat"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 18 },
      "id": 102,
      "title": "Business KPIs",
      "type": "row"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 15 },
          "unit": "short"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 19 },
      "id": 30,
      "targets": [
        {
          "datasource": "${DS_PROMETHEUS}",
          "expr": "aima_customers_by_segment",
          "legendFormat": "{{segment}}"
        }
      ],
      "title": "Customer Count by Segment",
      "type": "timeseries"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 15 }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 19 },
      "id": 31,
      "targets": [
        {
          "datasource": "${DS_PROMETHEUS}",
          "expr": "aima_brand_sentiment_score",
          "legendFormat": "{{dimension}}"
        }
      ],
      "title": "Brand Sentiment by Dimension",
      "type": "timeseries"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 27 },
      "id": 103,
      "title": "Infrastructure",
      "type": "row"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 0.7 }, { "color": "red", "value": 0.9 }] },
          "unit": "percentunit"
        }
      },
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 28 },
      "id": 40,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background" },
      "targets": [
        {
          "datasource": "${DS_PROMETHEUS}",
          "expr": "1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)",
          "legendFormat": "Memory Usage"
        }
      ],
      "title": "Memory Usage",
      "type": "stat"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 0.7 }, { "color": "red", "value": 0.9 }] },
          "unit": "percentunit"
        }
      },
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 28 },
      "id": 41,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background" },
      "targets": [
        {
          "datasource": "${DS_PROMETHEUS}",
          "expr": "1 - avg(rate(node_cpu_seconds_total{mode=\"idle\"}[5m]))",
          "legendFormat": "CPU Usage"
        }
      ],
      "title": "CPU Usage",
      "type": "stat"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": { "unit": "short" }
      },
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 28 },
      "id": 42,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "value" },
      "targets": [
        {
          "datasource": "${DS_PROMETHEUS}",
          "expr": "pg_stat_database_numbackends{datname=\"aima\"}",
          "legendFormat": "DB Connections"
        }
      ],
      "title": "Postgres Connections",
      "type": "stat"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": { "unit": "short" }
      },
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 28 },
      "id": 43,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "value" },
      "targets": [
        {
          "datasource": "${DS_PROMETHEUS}",
          "expr": "redis_connected_clients",
          "legendFormat": "Redis Clients"
        }
      ],
      "title": "Redis Connected Clients",
      "type": "stat"
    }
  ],
  "refresh": "30s",
  "schemaVersion": 38,
  "tags": ["aima", "marketing", "ai", "platform"],
  "time": { "from": "now-3h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "AIMA Platform Overview",
  "uid": "aima-platform-overview",
  "version": 1
}
